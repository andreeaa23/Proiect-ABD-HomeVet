<Window x:Class="CabinetVeterinar.Autentificare_normal_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CabinetVeterinar"
        mc:Ignorable="d"
        Title="Autentificare" Height="400" Width="780" Icon="/Images/Vetlogo.png"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="604*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF772864" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="BtnProgramare" Background="Gray" Foreground="#C0C0C0" Content="Fa o programare" HorizontalAlignment="Left" Margin="21,173,0,0" VerticalAlignment="Top" Width="148" Click="BtnProgramare_Click" Height="39" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnListaAnimale" Background="Gray" Foreground="#C0C0C0" Content="Lista animale" HorizontalAlignment="Left" Margin="21,241,0,0" VerticalAlignment="Top" Width="148" Click="BtnListaAnimale_Click" Height="39" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnSOS" Content="Situatii de urgenta" Background="Gray" Foreground="#C0C0C0" HorizontalAlignment="Left" Margin="21,106,0,0" VerticalAlignment="Top" Width="148" FontSize="16" Height="39" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnIntrebari" Content="Pune o intrebare" Background="Gray" Foreground="#C0C0C0" HorizontalAlignment="Left" Margin="21,304,0,0" VerticalAlignment="Top" Width="148" Height="39" FontSize="16" Click="BtnIntrebari_Click" Grid.ColumnSpan="2"/>
        <Label x:Name="LblUserName"  Foreground="#C0C0C0" Content="Hello, UserName" HorizontalAlignment="Left" Margin="396.2,10,0,0" VerticalAlignment="Top" Width="174" FontSize="16" Grid.Column="1"/>
        <Image x:Name="BtnImagine" Source="/Images/Vetlogo.png" HorizontalAlignment="Left" Height="64" Margin="10,10,0,0" VerticalAlignment="Top" Width="177" Grid.ColumnSpan="2"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="228.2,145,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
